import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class MathUtilsTest {

    MathUtils math = new MathUtils();

    @Test
    void testAddition() {
        assertEquals(5, math.add(2, 4), "2 + 3 should be 5");
    }

    @Test
    void testSubtraction() {
        assertEquals(1, math.subtract(3, 2), "3 - 2 should be 1");
    }

    @Test
    void testMultiplication() {
        assertEquals(6, math.multiply(2, 3), "2 * 3 should be 6");
    }

    @Test
    void testDivision() {
        assertEquals(2, math.divide(6, 3), "6 / 3 should be 2");
    }

    @Test
    void testDivisionByZero() {
        assertThrows(IllegalArgumentException.class, () -> math.divide(5, 0));
    }
}
