import java.util.*;

class Person{
    private String name;
    private String type; 

    public Person(String name, String type) {
        this.name = name;
        this.type = type;
    }

    public String getName() {
        return name;
    }

    public String getType() {
        return type;
    }
}
public class FraudCheck {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        System.out.print("Enter traveller name: ");
        String name = sc.nextLine();

        System.out.print("Enter traveller type (domestic/international): ");
        String type = sc.nextLine();

        // Create person object
        Person traveller = new Person(name, type);

        // Fraud account list
        List<String> fraudList = Arrays.asList("Bob", "Charlie", "David");

        // Check using stream + filter
        boolean isFraud = fraudList.stream()
                .filter(n -> n.equalsIgnoreCase(traveller.getName()))
                .findAny()
                .isPresent();

        if (isFraud) {
            System.out.println("❌ Travel Blocked! FRAUD detected for: " + traveller.getName());
        } else {
            System.out.println("✅ Traveller cleared: " + traveller.getName());

            // map example
            List<String> msg = Arrays.asList(traveller.getType()).stream()
                    .map(t -> "Processing " + t + " traveller security check...")
                    .collect(Collectors.toList());

            msg.forEach(System.out::println);
        }

        // filter example: show fraud names longer than 3 characters
        List<String> longNames = fraudList.stream()
                .filter(n -> n.length() > 3)
                .collect(Collectors.toList());

        System.out.println("Fraud names longer than 3 characters: " + longNames);

        sc.close();
    }
}
